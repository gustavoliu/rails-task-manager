index.html.erb

<ul>
<% @tasks.each do |task| %>
<% if task.done == true %>
<%  done_text = "Already done" %>
<% else %>
<%  done_text = "Not done" %>
<% end %>
  <li><%= link_to "#{task.name} --- <#{done_text}>", task_path(task) %></li>
<% end %>
</ul>
<%= link_to 'Create new task', new_task_path %>
