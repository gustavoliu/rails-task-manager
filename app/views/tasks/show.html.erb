show.html.erb

<h2><%= @task.name %></h2>
<p><%= @task.done %></p>
<%= link_to 'Edit this task', edit_task_path(@task) %>
<%= link_to "Delete", task_path(@task),
  method: :delete,
  data: { confirm: "Are you sure you want to delete this task?" } %>
<%= link_to 'Return to tasks index', root_path %>
